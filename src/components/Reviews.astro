    import '../styles/reviews.css';
---

<div class="review1">
	<p style="color:white;font-size:1.5em">Reviews Go Here</p>
</div>
<!-- <hr> -->
<div style="margin-top:3em;">
	<form>
		<h3>Post A Review:</h3>
		<input id="name" type="text" name="name" value="Name (optional)" />
		<br />
		<input id="email" type="text" name="email" value="Email" />
		<br />
		<textarea id="message" name="message" rows="25" cols="120"></textarea>
		<br>
		<button id="revInput" class="foo">Post Review</button>
	</form>
</div>